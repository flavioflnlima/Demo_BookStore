@model BookStore.ViewModels.CreateBookViewModel
@{
    ViewBag.Title = "Criando um Novo Livro";
}

<h2>Novo Livro</h2>

<form>
    <div class="form-group">
        @*<label for="exampleInputEmail1" class="form-label">Email address</label>*@
        @*<input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">*@
        @Html.LabelFor(model => model.Nome, new { htmlAttributes = new { @class = "form-label" } })
        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ISBN, new { htmlAttributes = new { @class = "form-label" } })
        @Html.EditorFor(model => model.ISBN, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.DataLancamento, new { htmlAttributes = new { @class = "form-label" } })
        @Html.EditorFor(model => model.DataLancamento, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.CategoriaId)
        @Html.DropDownListFor(
                    c => c.CategoriaId,
                    Model.CategoriaOptions,
                    "Selecione a opção...",
                    new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}